{
  "name": "mailgun",
  "title": "MailGun",
  "description": "MailGun - Powerful APIs that allow you to send, receive and track email effortlessly. Send 10,000 emails for free every month",
  "url": "https://mailgun.com",
  "trackDuplicates": false,
  "config": {},
  "auth": {
    "strategy": "issuer_token",
    "properties": {
      "username": {
        "title": "Public API Key",
        "type": "string"
      },
      "password": {
        "title": "API Key",
        "type": "string"
      }
    },
    "disposition": [
      "username",
      "password"
    ]
  },
  "rpcs": {
    "get_domains": {
      "contentType": "application/json",
      "title": "Get Domains"
    }
  },
  "actions": {
    "bounced": {
      "title": "On A Bounce",
      "description": "Triggers when an email is bounced",
      "doc_ref": "http://documentation.mailgun.com/api-bounces.html#bounces",
      "trigger": "poll",
      "config": {
        "properties": {
          "domain": {
            "type": "string",
            "oneOf": [
              {
                "$ref": "/rpcs/get_domains#items/{name}"
              }
            ],
            "title": "Domain"
          }
        },
        "required": [
          "domain"
        ],
        "disposition": [
          "domain"
        ]
      },
      "exports": {
        "properties": {
          "code": {
            "type": "number",
            "title": "bounce code"
          },
          "address": {
            "type": "string",
            "title": "bounced email address"
          }
        }
      },
      "imports": {
        "properties": {}
      }
    },
    "complaints": {
      "title": "On A Complaint",
      "description": "Triggers when an someone complains that an email messages is spam",
      "doc_ref": "http://documentation.mailgun.com/api-complaints.html#spam-complaints",
      "trigger": "poll",
      "config": {
        "properties": {
          "domain": {
            "type": "string",
            "oneOf": [
              {
                "$ref": "/rpcs/get_domains#items/{name}"
              }
            ],
            "title": "Domain"
          }
        },
        "required": [
          "domain"
        ],
        "disposition": [
          "domain"
        ]
      },
      "exports": {
        "properties": {
          "created_at": {
            "type": "string",
            "title": "time complaint was registered"
          },
          "address": {
            "type": "string",
            "title": "complaint email address"
          }
        }
      },
      "imports": {
        "properties": {}
      }
    },
    "send": {
      "title": "Send an Email",
      "description": "Send an Email",
      "doc_ref": "http://documentation.mailgun.com/api-sending.html#sending",
      "trigger": "invoke",
      "config": {
        "properties": {
          "from": {
            "type": "string",
            "title": "Default From Address"
          },
          "domain": {
            "type": "string",
            "oneOf": [
              {
                "$ref": "/rpcs/get_domains#items/{name}"
              }
            ],
            "title": "Domain"
          }
        },
        "disposition": [
          "from",
          "domain"
        ]
      },
      "exports": {
        "properties": {
          "message": {
            "type": "string",
            "title": "Queue Message"
          },
          "id": {
            "type": "string",
            "title": "Message ID"
          }
        }
      },
      "imports": {
        "properties": {
          "from": {
            "type": "string",
            "title": "From Address"
          },
          "to": {
            "type": "string",
            "title": "To Address"
          },
          "cc": {
            "type": "string",
            "title": "Cc"
          },
          "bcc": {
            "type": "string",
            "title": "Bcc"
          },
          "subject": {
            "type": "string",
            "title": "Subject"
          },
          "text": {
            "type": "string",
            "title": "Text"
          },
          "html": {
            "type": "string",
            "title": "HTML"
          }
        },
        "required": [
          "from",
          "to"
        ],
        "disposition": [
          "from",
          "to",
          "cc",
          "bcc",
          "subject",
          "text",
          "html"
        ]
      }
    },
    "unsubscribed": {
      "title": "On An Unsubscribe",
      "description": "Triggers when an email is unsubscribed",
      "doc_ref": "http://documentation.mailgun.com/api-unsubscribes.html#unsubscribes",
      "trigger": "poll",
      "config": {
        "properties": {
          "domain": {
            "type": "string",
            "oneOf": [
              {
                "$ref": "/rpcs/get_domains#items/{name}"
              }
            ],
            "title": "Domain"
          }
        },
        "required": [
          "domain"
        ],
        "disposition": [
          "domain"
        ]
      },
      "exports": {
        "properties": {
          "tag": {
            "type": "string",
            "title": "tag for unsubscribe list"
          },
          "address": {
            "type": "string",
            "title": "unsubscribed email address"
          }
        }
      },
      "imports": {
        "properties": {}
      }
    },
    "validate": {
      "title": "Validate an Email Address",
      "description": "Validate an Email Address",
      "doc_ref": "http://documentation.mailgun.com/api-complaints.html#complaints",
      "trigger": "invoke",
      "config": {
        "properties": {}
      },
      "exports": {
        "properties": {
          "is_valid": {
            "type": "boolean",
            "title": "Email Is Valid"
          },
          "address": {
            "type": "string",
            "title": "Email Address"
          },
          "did_you_mean": {
            "type": "string",
            "title": "Did You Mean Address"
          },
          "domain": {
            "type": "string",
            "title": "Address Domain"
          },
          "local_part": {
            "type": "string",
            "title": "Address Local Part"
          },
          "parts": {
            "type": "object",
            "title": "Address Parts"
          }
        }
      },
      "imports": {
        "properties": {
          "address": {
            "type": "string",
            "title": "Email Address"
          }
        },
        "required": [
          "address"
        ],
        "disposition": [
          "address"
        ]
      }
    }
  },
  "tags": [
    "email",
    "productivity",
    "messaging"
  ]
}