{
  "name": "openweathermap",
  "title": "OpenWeatherMap",
  "url": "www.openweathermap.org",
  "description": "OpenWeatherMap service provides open weather data for more than 200,000 cities",
  "auth": {
    "strategy": "issuer_token",
    "properties": {
      "username": {
        "title": "API Key",
        "type": "string"
      }
    },
    "disposition": [
      "username"
    ]
  },
  "rpcs": {},
  "actions": {
    "forecast": {
	  "trigger": "invoke",
      "title": "Forecast",
      "description": "Get the Forecast for a Given City",
	  "config": {
      	"properties": {
		  "q": {
		    "type": "string",
            "description": "Weather in City & Country"
		  }
		}
	  },
	  "imports": {
        "properties": {
          "q": {
            "type": "string",
            "title": "query",
            "description": "Weather in City & Country"
          },
          "cnt": {
            "type": "number",
            "title": "count",
            "description": "Number of Days"
          }
        },
        "disposition": [
          "q",
		  "cnt"
        ]
      },
      "exports": {
        "properties": {
          "temp": {
            "type": "number",
            "title": "Temperature",
            "description": "Temperature"
          },
		  "description": {
            "type": "string",
            "title": "Weather",
            "description": "Weather"
          },
          "wind_speed": {
            "type": "number",
            "title": "Wind Speed",
            "description": "Wind Speed"
          },
          "wind_direction": {
            "type": "number",
            "title": "Wind Direction",
            "description": "Wind Direction"
          },
          "pressure": {
            "type": "number",
            "title": "Barometric Pressure",
            "description": "Barometric Pressure"
          }
        }
      }
    },
    "daily": {
	  "trigger": "invoke",
      "title": "Daily Forecast",
      "description": "Get the Daily Forecast for a Given City",
	  "config": {
      	"properties" : {
		  "q": {
		    "type": "string",
            "description": "Weather in City & Country"
		  }
		}
	  },
	  "imports": {
        "properties": {
          "q": {
            "type": "string",
            "title": "query",
            "description": "Weather in City & Country"
          },
          "cnt": {
            "type": "number",
            "title": "count",
            "description": "Number of Days"
          }
        },
        "disposition": [
          "q",
          "cnt"
        ]
      },
      "exports": {
        "properties": {
          "temp_day": {
            "type": "number",
            "title": "Daytime Temperature",
            "description": "Daytime Temperature"
          },
          "temp_night": {
            "type": "number",
            "title": "Night-time Temperature",
            "description": "Nighttime Temperature"
          },
		  "description": {
            "type": "string",
            "title": "Description of the Weather",
            "description": "Weather"
          },
          "wind_speed": {
            "type": "number",
            "title": "Wind Speed",
            "description": "Wind Speed"
          },
          "wind_direction": {
            "type": "number",
            "title": "Wind Direction",
            "description": "Wind Direction"
          },
          "pressure": {
            "type": "number",
            "title": "Barometric Pressure",
            "description": "Barometric Pressure"
          },
          "humidity": {
            "type": "number",
            "title": "Humidity",
            "description": "Humidity"
          }
        }
      }
    },
    "now": {
	  "trigger": "invoke",
      "title": "Weather Right Now",
      "description": "Get the Current Weather for a Given City",
	  "config": {
      	"properties" : {
		  "q": {
		    "type": "string",
            "description": "Weather in City & Country"
		  }
		}
	  },
	  "imports": {
        "properties": {
          "q": {
            "type": "string",
            "title": "query",
            "description": "Weather in City & Country"
          }
        },
        "disposition": [
          "q"
        ]
      },
      "exports": {
        "properties": {
          "temp": {
            "type": "number",
            "title": "Temperature",
            "description": "Temperature"
          },
    		  "description": {
            "type": "string",
            "title": "Weather",
            "description": "Weather"
          },
          "wind_speed": {
            "type": "number",
            "title": "Wind Speed",
            "description": "Wind Speed"
          },
          "wind_direction": {
            "type": "number",
            "title": "Wind Direction",
            "description": "Wind Direction"
          }
        }
      }
    }
  }
}
