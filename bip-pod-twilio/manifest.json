{
  "name": "twilio",
  "title": "Twilio",
  "description": "Build the next generation of communications with Twilio",
  "url": "https://www.twilio.com",
  "trackDuplicates": false,
  "config": {},
  "auth": {
    "strategy": "issuer_token",
    "properties": {
      "username": {
        "title": "Account Sid",
        "type": "string"
      },
      "password": {
        "title": "Auth Token",
        "type": "string"
      }
    },
    "disposition": [
      "username",
      "password"
    ]
  },
  "rpcs": {},
  "actions": {
    "send_sms": {
      "title": "Send an SMS message",
      "description": "Sends a new outgoing SMS Message. If you are sending SMS while your Twilio account is in Trial mode, the \"To\" phone number must be verified with Twilio.",
      "trigger": "invoke",
      "config": {
        "properties": {
          "body": {
            "type": "string",
            "description": "SMS Body"
          },
          "to_phone": {
            "type": "string",
            "description": "Recipient Phone #"
          },
          "from_phone": {
            "type": "string",
            "description": "From Phone Number",
            "required": true
          }
        },
        "disposition": [
          "body",
          "to_phone",
          "from_phone"
        ]
      },
      "exports": {
        "properties": {
          "status": {
            "type": "string",
            "description": "SMS Status"
          },
          "sid": {
            "type": "string",
            "description": "SMS Message Id"
          },
          "body": {
            "type": "string",
            "description": "Response Body"
          },
          "uri": {
            "type": "string",
            "description": "Twilio SMS URI"
          }
        }
      },
      "imports": {
        "properties": {
          "body": {
            "type": "string",
            "description": "SMS Body"
          },
          "to_phone": {
            "type": "string",
            "description": "Recipient Phone #"
          }
        },
        "disposition": [
          "body",
          "to_phone"
        ]
      }
    }
  },
  "tags": [
    "messaging"
  ]
}