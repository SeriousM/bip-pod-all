{
  "name": "circonus",
  "title": "Circonus",
  "description": "Circonus monitors and analyzes all your data, from any source",
  "url": "http://www.circonus.com",
  "trackDuplicates": true,
  "config": {},
  "auth": {
    "strategy": "issuer_token",
    "authMap" : {
      "username" : "App Name",
      "password" : "API Token"
    }
  },
  "rpcs": {},
  "actions": {
    "on_new_alert": {
      "title": "On a New Alert",
      "description": "Triggers On a New Alert",
      "doc_ref" : "https://login.circonus.com/resources/api/calls/alert",
      "trigger": "poll",
      "config": {
        "properties": {}
      },
      "exports": {
        "properties": {
          "_value": {
            "type": "string",
            "description": "Alert Value"
          },
          "_alert_url": {
            "type": "string",
            "description": "Alert URL"
          },
          "_metric_name": {
            "type": "string",
            "description": "Metric Name"
          },
          "_metric_notes": {
            "type": "string",
            "description": "Metric Notes"
          },
          "_metric_link": {
            "type": "string",
            "description": "Metric Link"
          },
          "_severity": {
            "type": "string",
            "description": "Severity"
          },
          "_cid": {
            "type": "string",
            "description": "Alert ID"
          },
          "_occurred_on": {
            "type": "string",
            "description": "UTC Unix Time"
          }
        }
      },
      "imports": {
        "properties": {}
      }
    },
    "http_trap": {
      "title": "HTTP Trap",
      "description": "Sends JSON object data to a HTTP Trap",
      "doc_ref" : "http://www.circonus.com/json-over-http",
      "trigger": "invoke",
      "config": {
        "properties": {
          "trap_url": {
            "type": "string",
            "description": "Trap URL"
          }
        },
        "required": [
          "trap_url"
        ],
        "disposition": [
          "trap_url"
        ]
      },
      "exports": {
        "properties": {}
      },
      "imports": {
        "properties": {
          "data": {
            "type": "mixed",
            "description": "JSON Data Object"
          }
        },
        "required": [
          "data"
        ],
        "disposition": [
          "data"
        ]
      }
    }
  }
}