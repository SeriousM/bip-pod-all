{
  "name": "chain",
  "title": "Chain",
  "description": "Chain enables developers to Build bitcoin apps, not block chain infrastructure.",
  "url": "https://chain.com",
  "trackDuplicates": false,
  "config": {},
  "auth": {
    "strategy": "issuer_token",
    "properties": {
      "username": {
        "title": "API Key",
        "type": "string"
      },
      "password": {
        "title": "Secret Key",
        "type": "string"
      }
    },
    "disposition": [
      "username",
      "password"
    ]
  },
  "rpcs": {},
  "actions": {
    "address": {
      "title": "Address",
      "description": "Returns the associated data for a given Bitcoin Address",
      "doc_ref": "https://chain.com/docs#object-bitcoin-address",
      "trigger": "invoke",
      "config": {
        "properties": {},
        "definitions": {}
      },
      "exports": {
        "properties": {
          "hash": {
            "type": "string",
            "title": "Address ID"
          },
          "balance": {
            "type": "number",
            "title": "Address Balance"
          },
          "received": {
            "type": "number",
            "title": "Received"
          },
          "sent": {
            "type": "number",
            "title": "Sent"
          },
          "unconfirmed_received": {
            "type": "number",
            "title": "Unconfirmed Received"
          },
          "unconfirmed_sent": {
            "type": "number",
            "title": "Unconfirmed Sent"
          },
          "unconfirmed_balance": {
            "type": "number",
            "title": "Unconfirmed Balance"
          }
        }
      },
      "imports": {
        "properties": {
          "address": {
            "type": "string",
            "title": "Bitcoin Address"
          }
        },
        "required": [
          "address"
        ],
        "disposition": [
          "address"
        ]
      }
    }
  },
  "tags": [
    "finance",
    "bitcoin",
    "messaging"
  ]
}