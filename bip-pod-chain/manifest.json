{
  "name": "chain",
  "title": "Chain",
  "description": "Chain enables developers to Build bitcoin apps, not block chain infrastructure.",
  "url": "https://chain.com",
  "trackDuplicates": false,
  "config": {},
  "auth": {
    "strategy": "issuer_token",
    "properties": {
      "username": {
        "title": "API Key",
        "type": "string"
      },
      "password": {
        "title": "Secret Key",
        "type": "string"
      }
    },
    "disposition": [
      "username",
      "password"
    ]
  },
  "rpcs": {},
  "actions": {
    "address": {
      "title": "Get An Address",
      "description": "Gets The Data For A Bitcoin Address",
      "doc_ref": "https://chain.com/docs#object-bitcoin-address",
      "trigger": "invoke",
      "config": {
        "properties": {},
        "definitions": {}
      },
      "exports": {
        "properties": {
          "address": {
            "type": "string",
            "description": "Address"
          },
          "total": {
            "type": "object",
            "description": "Total balances (confirmed & unconfirmed)"
          },
          "confirmed": {
            "type": "object",
            "description": "confirmed balances"
          }
        }
      },
      "imports": {
        "properties": {
          "address": {
            "type": "string",
            "description": "Bitcoin Address"
          }
        },
        "required": [
          "address"
        ],
        "disposition": [
          "address"
        ]
      }
    },
    "address_op_return": {
      "title": "Address OP_RETURN",
      "description": "Returns the associated OP_RETURN data for a given Bitcoin Address",
      "doc_ref": "https://chain.com/docs#bitcoin-address-op-returns",
      "trigger": "invoke",
      "config": {
        "properties": {},
        "definitions": {}
      },
      "exports": {
        "properties": {
          "tx_hash": {
            "type": "string",
            "description": "Transaction Hash"
          },
          "hex": {
            "type": "string",
            "description": "OP RETURN hex"
          },
          "text": {
            "type": "string",
            "description": "OP RETURN text"
          },
          "sender_addresses": {
            "type": "array",
            "description": "Sender Address(es)"
          },
          "receiver_addresses": {
            "type": "array",
            "description": "Receiver Address(es)"
          }        
	    }
      },
      "imports": {
        "properties": {
          "address": {
            "type": "string",
            "title": "Bitcoin Address"
          }
        },
        "required": [
          "address"
        ],
        "disposition": [
          "address"
        ]
      }
    }
  },
  "tags": [
    "finance",
    "bitcoin",
    "messaging"
  ]
}
